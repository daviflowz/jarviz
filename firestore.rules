rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras permissivas para teste - qualquer usuário logado pode acessar
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    match /contextEntities/{entityId} {
      allow read, write: if request.auth != null;
    }
    
    match /usage/{usageId} {
      allow read, write: if request.auth != null;
    }
    
    // Estrutura antiga
    match /users/{userId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir acesso a outras coleções para teste
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 